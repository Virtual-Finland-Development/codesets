{
  "name": "codesets",
  "version": "1.0.0",
  "description": "A shared codesets / resources router for virtual finland projects",
  "scripts": {
    "prebuild": "npm i && npm run clean",
    "build": "npm run build:codesets && npm run build:escoApi",
    "build:codesets": "ttsc",
    "build:escoApi": "ncc build src/escoApi.ts -o dist/escoApi --minify",
    "postbuild": "ts-node src/build/finalize-build.ts",
    "build:infra": "npm -C infra install && npm -C infra run build",
    "clean": "rimraf dist",
    "predeploy": "npm run build && npm run build:infra",
    "deploy": "pulumi -C infra up --yes",
    "dev": "npm run-all --parallel dev:codesets dev:escoApi",
    "dev:codesets": "nodemon --delay 80ms --watch 'src' -e 'ts' --ignore src/escoApi.ts --exec \"npm run build:codesets && npm run serve:codesets\"",
    "dev:escoApi": "nodemon --delay 80ms --watch src/escoApi.ts --watch src/utils -e 'ts'  --exec \"npm run build:escoApi && npm run serve:escoApi\"",
    "serve": "npm run-all --parallel serve:codesets serve:escoApi",
    "serve:codesets": "serverless offline --config ./serverless-offline.codesets.yml",
    "serve:escoApi": "serverless offline --config ./serverless-offline.escoApi.yml",
    "test": "jest",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint --ext .ts ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Virtual-Finland-Development/codesets.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Virtual-Finland-Development/codesets/issues"
  },
  "homepage": "https://github.com/Virtual-Finland-Development/codesets#readme",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.111",
    "@types/jest": "^29.4.0",
    "@types/mime": "^3.0.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "jest": "^29.4.3",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.5",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@iso4217/json": "^20230101.1.6",
    "@transcend-io/conflux": "^4.0.3",
    "aws-sdk": "^2.1326.0",
    "directory-import": "^2.3.1",
    "iso-3166": "^4.2.0",
    "iso-639": "^0.2.2",
    "mime": "^3.0.0",
    "typia": "^3.6.6"
  }
}